@model BirthdayCardGenorator.Models.BirthdayCardRequest


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SendCardForm</title>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <h2>Birthday Card Genorator</h2>
    <hr />
    <h4>Birthday Sent</h4>
    <div class="card" style="width: 18rem;">
        <div class="row">
            <div class="col-lg-4">
                From: @Model.From
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                To: @Model.To
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                Message: @Model.Message
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to Home</a>
    </div>

</body>
</html>